

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cities and Centers</title>
    
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1200px;
            margin: 20px auto;
            overflow: hidden;
        }

        .row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .city {
            width: 30%;
        }

        .box {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        h3, h4, p {
            margin: 0;
        }

        .options {
            display: flex;
            justify-content: space-between;
            margin-top: 10px;
        }

        .options a {
            display: block;
            padding: 8px 16px;
            text-align: center;
            text-decoration: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .options .edit {
            background-color: #3498db;
            color: #fff;
        }

        .options .delete {
            background-color: #e74c3c;
            color: #fff;
        }
    </style>
</head>
<body>

<h1>Cities and Centers</h1>
<a href="/auth/addcity" class="add-link">Add City</a>

{{#each cities}}
    <div class="container">
        <div class="city box">
            <h3>{{name}}</h3>
            <a href="/auth/addcenter/{{id}}" class="add-link">Add Center</a>


            <div class="options">
                <a class="edit" href="/auth/editcity/{{id}}">EDIT</a>
                <a class="delete" href="/auth/deletecity/{{id}}" onclick="return confirm('Are you sure you want to delete this city?')">DELETE</a>
            </div>
        </div>
        <div class="row">
            {{#each centers}}
                <div class="col">
                    <div class="box">
                        <h4>{{name}}</h4>
                        <p>{{address}}</p>
                        <div class="options">
                            <a class="edit" href="/editcenter/{{this.id}}">Edit Center</a>
                            <a class="delete" href="/deletecenter/{{this.id}}" onclick="return confirm('Are you sure you want to delete this center?')">Delete Center</a>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
{{/each}}
</body>
</html>
