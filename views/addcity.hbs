    <style>
        /* style.css */

body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f4;
    margin: 0;
    padding: 0;
}

.container {
    width: 100px;
    margin: 20px auto;
    overflow: hidden;
}

.box {
    background-color: #000;
    color: #fff;
    padding: 10px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    margin-bottom: 10px;
}

h2, p {
    margin: 0;
}

form {
    background-color: rgba(0, 0, 0, 0.5); /* Black color with 50% transparency */
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    width:500px;
    margin-left: 500px;
    margin-top: 50px;
}

label {
    display: block;
    margin-bottom: 8px;
    color: #fff; /* Text color for labels */
}

input {
    width: 100%;
    padding: 8px;
    margin-bottom: 10px;
    box-sizing: border-box;
}

button {
    background-color: #3498db;
    color: #fff;
    padding: 10px 16px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
}

    </style>
</head>
