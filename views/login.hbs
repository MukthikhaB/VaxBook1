<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
</head>
<body>
    <div class="header1">
        <img src="/images/hero-banner.png" alt="Logo" class="logo">
        <h1>COVID VACCINATION</h1>
    </div>
    
    <figure class="hero-banner">
        <img src="/images/hero-banner.png" width="570" height="562" alt="corona virus" class="w-100">
    </figure>
    <div class="box">
        <img src="/images/user.png" alt="Icon" class="icon">
        <div class="page">
            <div class="header">
                <a id="login" class="active" href="/login">login</a>
                <a id="signup" href="/signup">signup</a>
            </div>  
            <div id="errorMsg">
                {{#if msg}}
                    <p>{{msg}}</p>
                {{/if}}
            </div>           
            <div id="errorMsg"></div>
            <div class="content">
                <form class="login" name="loginForm" onsubmit="return validateLoginForm(event)" action="/auth/login" method="POST">
                    <input type="email" name="email" id="signEmail" placeholder="Email" required/>
                    <input type="password" name="password" id="logPassword" placeholder="Password">
                    <div id="check">
                        <input type="checkbox" id="remember">
                        <label for="remember">Remember me</label>
                    </div>
                    <br><br>
                    <input type="submit" value="Login">
                    <a href="#">Forgot Password?</a>
                    <div class="additional-image"></div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.min.js"
        integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <script src="index.js"></script>
<script>
    $(document).ready(function () {
        // Toggle classes and handle navigation for login/signup links
        $(".header a").on("click", function () {
            $(".page").toggleClass("extend", $(this).attr("id") === "signup");
            $(".header a").removeClass("active");
            $(this).addClass("active");

            // Check if the clicked link has an id of "signup"
            if ($(this).attr("id") === "signup") {
                // Navigate to "/signup"
                window.location.href = "/signup";
            }
        });
    });

    // Trigger the hashchange event on page load
    $(window).trigger("hashchange");
</script>
</body>
</html>