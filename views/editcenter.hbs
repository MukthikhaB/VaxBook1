<!-- editcenter.hbs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Center</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    
        <style>
        form {
    background-color: rgba(0, 0, 0, 0.5); /* Black color with 50% transparency */
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    width: 500px;
    height: 225px;
    margin-left: 500px;
    margin-top: 50px;
}
label {
    color: #fff;
}
button[type="submit"] {
    background-color: #3498db; /* Blue color for the "Update City" button */
    color: #fff; /* Text color for the button */
    padding: 10px 16px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
}
    </style>

</head>
<body>
    <div class="header1">
        <img src="/images/hero-banner.png" alt="Logo" class="logo">
        <h1>COVID VACCINATION</h1>
    </div>
    <div class="addnewcity">
        <h1>Edit Center</h1>
    </div>


    <div class="form-container">
        <form action="/updatecenter/{{center.id}}" method="post">
            <!-- Populate the form fields with existing data for editing -->
            <label for="centerName">Center Name:</label>
            <input type="text" id="centerName" name="centerName" value="{{center.name}}" required>

            <label for="centerAddress">Center Address:</label>
            <input type="text" id="centerAddress" name="centerAddress" value="{{center.address}}" required>

            <!-- Add more form fields if needed -->

            <button type="submit">Update Center</button>
        </form>
    </div>

    <!-- Add your HTML content as needed -->

</body>
</html>
